<h1>Notes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Etags</th>
      <th colspan="6">Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.title %></td>
        <td><%= note.etags %></td>
        <td><%= note.content %></td>
        <td><%= link_to 'Show', note %></td>
        <td><%= link_to 'Restore', restore_note_path(note) %></td>
        <td><%= link_to 'Delete', note_path(note), method: :delete, data: { confirm: 'This will delete this Note permanently' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path %>
