<h1>Notes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Etags</th>
      <th>Content</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.title %></td>
        <td><%= note.etags %></td>
        <td><%= note.content %></td>
        <td><%= note.status %></td>
        <td><%= link_to 'Show', note %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <td><%= link_to 'Delete', inactive_note_path(note), data: { confirm: 'You can anytime recover notes from trash' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path %>
